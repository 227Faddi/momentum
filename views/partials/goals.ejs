<% if (goals) { %>
    <% let goalsArr = goals.filter((goal) => goal.category === category) %>
    <div class="flex flex-col md:flex-row justify-around items-center md:items-start gap-5">
        <div>
            <p class="text-xl mb-3 font-extrabold tracking-tight text-white">
                Short term
            </p>
            <ul class="w-60 text-sm font-medium border rounded-lg bg-gray-700 border-gray-600 text-white">
                <% goalsArr.forEach((goal, index) =>{%>
                    <% if(goal.timeFrame === 'short-term'){%>
                        <li class="w-full border-b rounded-t-lg border-gray-600">
                            <div class="flex items-center px-3">
                                <!-- /updateStatus/:id -->
                                <form action="/goal/updateStatus/<%= goal._id %>/1" method="POST" class="w-4 h-4">
                                    <input type="hidden" name="_method" value="PUT">
                                    <input id="vue-checkbox" type="checkbox" value="" onclick="this.form.submit()" class="cursor-pointer text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-700 focus:ring-offset-gray-700 focus:ring-2 bg-gray-600 border-gray-500">
                                </form>
                                <label for="vue-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-300">
                                    <%= goal.title %>
                                </label>
                                <form action="/goal/delete/<%= goal._id %>" method="POST" class="d-inline">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="">
                                        <i class="fa-solid fa-delete-left"></i>
                                    </button>
                                </form>
                            </div>
                        </li>
                    <% } %>
                <% }) %>  
            </ul>
        </div>
        <div>
            <p class="text-xl mb-3 font-extrabold tracking-tight text-white">
                Long term
            </p>
            <ul class="w-60 text-sm font-medium border rounded-lg bg-gray-700 border-gray-600 text-white">
                <% goalsArr.forEach((goal, index) =>{%>
                    <% if(goal.timeFrame === 'long-term'){%>
                        <li class="w-full border-b rounded-t-lg border-gray-600">
                            <div class="flex items-center px-3">
                                <form action="/goal/updateStatus/<%= goal._id %>/10" method="POST" class="w-4 h-4">
                                    <input type="hidden" name="_method" value="PUT">
                                    <input id="vue-checkbox" type="checkbox" value="" onclick="this.form.submit()" class="cursor-pointer text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-700 focus:ring-offset-gray-700 focus:ring-2 bg-gray-600 border-gray-500">
                                </form>
                                <label for="vue-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-300">
                                    <%= goal.title %>
                                </label>
                                <form action="/goal/delete/<%= goal._id %>" method="POST" class="d-inline">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="">
                                        <i class="fa-solid fa-delete-left"></i>
                                    </button>
                                </form>
                            </div>
                        </li>
                    <% } %>
                <% }) %> 
            </ul> 
        </div> 
    </div>
<% } %>